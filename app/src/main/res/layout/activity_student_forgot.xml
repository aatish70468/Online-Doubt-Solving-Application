<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".stu_enrollment"
        android:layout_gravity="center"
        android:background="@drawable/new_login_gradients">

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/textView2"
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:src="@drawable/stud"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="43dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="60dp" android:layout_marginRight="60dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"/>

        <EditText
                android:layout_width="345dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/stu_forgot" android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="84dp" android:layout_marginStart="84dp" android:layout_marginEnd="84dp"
                android:layout_marginRight="84dp" app:layout_constraintEnd_toEndOf="parent"
                android:hint="@string/enter_your_enrollment_no"
                android:textColor="#fff" android:textColorHint="#fff"/>
        <Button
                android:text="@string/submit"
                android:layout_width="187dp"
                android:layout_height="46dp"
                android:id="@+id/stu_submit" android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/stu_forgot" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="148dp" android:layout_marginStart="148dp" android:layout_marginEnd="148dp"
                android:layout_marginRight="148dp" app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.AppCompat.Button.Colored" android:textSize="18sp" android:textColor="#000000"
                app:layout_constraintHorizontal_bias="0.498" android:background="@drawable/layout_background_1"/>
        <TextView
                android:layout_width="345dp" android:layout_height="50dp"
                android:ems="10"
                android:id="@+id/for_dis"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/stu_submit" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="84dp" android:layout_marginStart="84dp" android:layout_marginEnd="84dp"
                android:layout_marginRight="84dp" app:layout_constraintEnd_toEndOf="parent"
                android:textColor="#fff" android:enabled="false"/>
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>